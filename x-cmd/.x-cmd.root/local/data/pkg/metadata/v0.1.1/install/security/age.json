{
  "lang": "go",
  "homepage": "https://github.com/FiloSottile/age",
  "desc": {
    "en": "age is a simple, modern and secure file encryption tool, format, and Go library",
    "cn": "age 是一个简单、现代和安全的文件加密工具、格式和 Go 库"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "darwin/port": {
      "cmd": "sudo port install age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "debian/apt": {
      "cmd": "sudo apt install age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge app-crypt/age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "alpine/apk": {
      "cmd": "sudo apk add age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i age",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras\n&& x scoop install extras/age\n",
      "reference": "https://scoop.sh/#/apps?q=age"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install age.portable",
      "reference": "https://github.com/FiloSottile/age?tab=readme-ov-file#installation"
    }
  }
}
