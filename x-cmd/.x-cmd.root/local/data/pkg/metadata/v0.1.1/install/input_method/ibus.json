{
  "lang": "C",
  "homepage": "https://github.com/ibus/ibus",
  "desc": {
    "cn": "IBus 是一个 Linux/Unix 操作系统的开源输入框架",
    "en": "IBus is an open source input framework for Linux/Unix OS"
  },
  "rule": {
    "fedora/dnf": {
      "cmd": "sudo dnf install ibus\\*",
      "reference": "https://github.com/ibus/ibus/wiki/ReadMe#fedora-22-and-later"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install ibus-gtk ibus-qt4 ibus-pinyin \\\n&& im-switch -s ibus\n",
      "reference": "https://github.com/ibus/ibus/wiki/ReadMe#ubuntu"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av ibus-pinyin",
      "reference": "https://github.com/ibus/ibus/wiki/ReadMe#gentoo"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S ibus",
      "reference": "https://github.com/ibus/ibus/wiki/ReadMe#arch-linux"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper in ibus-libpinyin ibus-gtk3 ibus-gtk ibus-qt",
      "reference": "https://github.com/ibus/ibus/wiki/ReadMe#opensuse-131-or-later"
    }
  }
}
