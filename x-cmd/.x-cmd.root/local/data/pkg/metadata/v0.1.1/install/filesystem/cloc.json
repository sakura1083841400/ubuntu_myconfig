{
  "lang": "Perl",
  "homepage": "https://github.com/AlDanial/cloc",
  "desc": {
    "cn": "计算代码行数，对许多编程语言中的空白行、注释行和源代码的物理行进行计数",
    "en": "cloc counts blank lines, comment lines, and physical lines of source code in many programming languages."
  },
  "rule": {
    "/npm": {
      "cmd": "npm install -g cloc",
      "reference": "https://www.npmjs.com/package/cloc"
    },
    "darwin/brew": {
      "cmd": "brew install cloc",
      "reference": "https://formulae.brew.sh/formula/cloc#default"
    },
    "debian/apt": {
      "cmd": "sudo apt install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "alpine/apk": {
      "cmd": "sudo apk add cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "kali/apt": {
      "cmd": "sudo apt install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "rhel/yum": {
      "cmd": "sudo yum install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "fedora/yum": {
      "cmd": "sudo yum install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av dev-util/cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "darwin/port": {
      "cmd": "sudo port install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install cloc",
      "reference": "https://github.com/AlDanial/cloc?tab=readme-ov-file#install-via-package-manager"
    }
  }
}
