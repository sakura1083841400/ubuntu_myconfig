{
  "lang": "python",
  "homepage": "https://github.com/sphinx-doc/sphinx",
  "desc": {
    "cn": "Sphinx 可以轻松创建智能且美观的文档。",
    "en": "Sphinx makes it easy to create intelligent and beautiful documentation."
  },
  "rule": {
    "/pip": {
      "cmd": "pip install -U sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#installation-from-pypi"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install python3-sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#debian-ubuntu"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install python3-sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#debian-ubuntu"
    },
    "rhel/yum": {
      "cmd": "sudo yum install python-sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#rhel-centos"
    },
    "centos/yum": {
      "cmd": "sudo yum install python-sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#rhel-centos"
    },
    "darwin/brew": {
      "cmd": "brew install sphinx-doc",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#macos"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install py39-sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#macports"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install sphinx",
      "reference": "https://www.sphinx-doc.org/en/master/usage/installation.html#chocolatey"
    }
  }
}
