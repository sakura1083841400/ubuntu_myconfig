{
  "lang": "python",
  "homepage": "https://github.com/andreafrancia/trash-cli",
  "desc": {
    "cn": "trash-cli 用于移动文件到回收站，同时会记录文件的原地址和删除日期",
    "en": "trash-cli trashes files recording the original path, deletion date"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install trash-cli",
      "reference": "https://formulae.brew.sh/formula/trash-cli#default"
    },
    "/pip": {
      "cmd": "pip install trash-cli",
      "reference": "https://github.com/andreafrancia/trash-cli?tab=readme-ov-file#installation"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install trash-cli",
      "reference": "https://github.com/andreafrancia/trash-cli?tab=readme-ov-file#from-package-manager"
    },
    "debian/apt": {
      "cmd": "sudo apt install trash-cli",
      "reference": "https://github.com/andreafrancia/trash-cli?tab=readme-ov-file#from-package-manager"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S trash-cli",
      "reference": "https://github.com/andreafrancia/trash-cli?tab=readme-ov-file#from-package-manager"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install trash-cli",
      "reference": "https://github.com/andreafrancia/trash-cli?tab=readme-ov-file#from-package-manager"
    }
  }
}
