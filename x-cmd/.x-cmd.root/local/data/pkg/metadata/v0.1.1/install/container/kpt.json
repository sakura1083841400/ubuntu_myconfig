{
  "lang": "Go",
  "homepage": "https://kpt.dev/",
  "desc": {
    "cn": "自动化 Kubernetes 配置编辑",
    "en": "Automate Kubernetes Configuration Editing"
  },
  "rule": {
    "/gcloud": {
      "cmd": "gcloud components install kpt",
      "reference": "https://kpt.dev/installation/kpt-cli?id=gcloud"
    },
    "darwin/brew": {
      "cmd": "brew tap GoogleContainerTools/kpt https://github.com/GoogleContainerTools/kpt.git \\\n&& brew install kpt\n",
      "reference": "https://kpt.dev/installation/kpt-cli?id=homebrew"
    },
    "/go": {
      "cmd": "go install -v github.com/GoogleContainerTools/kpt@main",
      "reference": "https://kpt.dev/installation/kpt-cli?id=source"
    },
    "/asdf": {
      "cmd": "x asdf use kpt",
      "reference": "https://github.com/nlamirault/asdf-kpt?tab=readme-ov-file#install"
    }
  }
}
