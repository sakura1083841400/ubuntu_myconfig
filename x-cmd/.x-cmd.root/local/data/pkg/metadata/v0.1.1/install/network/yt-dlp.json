{
  "lang": "Python",
  "homepage": "https://github.com/yt-dlp/yt-dlp",
  "desc": {
    "cn": "youtube-dl 的一个分支，主要重点是添加新功能和补丁",
    "en": "A youtube-dl fork with additional features and fixes"
  },
  "rule": {
    "/pip": {
      "cmd": "python3 -m pip install -U yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#with-pip"
    },
    "darwin/brew": {
      "cmd": "brew install yt-dlp",
      "reference": "https://formulae.brew.sh/formula/yt-dlp#default"
    },
    "debian/apt": {
      "cmd": "sudo add-apt-repository ppa:tomtomtom/yt-dlp \\\n&& sudo apt update \\\n&& sudo apt install yt-dlp\n",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#apt"
    },
    "ubuntu/apt": {
      "cmd": "sudo add-apt-repository ppa:tomtomtom/yt-dlp \\\n&& sudo apt update \\\n&& sudo apt install yt-dlp\n",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#apt"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -Syu yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#pacman"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#macports"
    },
    "alpine/apk": {
      "cmd": "doas apk -U add yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#alpine-linux"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#winget"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#scoop"
    },
    "(win|wsl2)/choco": {
      "cmd": "x cchoco install yt-dlp",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#chocolatey"
    }
  }
}
