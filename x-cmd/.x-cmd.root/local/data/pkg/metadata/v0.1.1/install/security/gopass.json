{
  "lang": "Go",
  "homepage": "https://www.gopass.pw/",
  "desc": {
    "cn": "Unix 密码管理器",
    "en": "unix password manager"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#homebrew-linuxmacos"
    },
    "darwin/port": {
      "cmd": "sudo port install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#macports-macos"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#fedora--redhat--centos"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#fedora--redhat--centos"
    },
    "centos/dnf": {
      "cmd": "sudo dnf install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#fedora--redhat--centos"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#arch-linux"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#windows"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install gopass.gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#windows"
    },
    "alpine/apk": {
      "cmd": "sudo apk add gopass",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#alpine-linux"
    },
    "/go": {
      "cmd": "go install github.com/gopasspw/gopass@latest",
      "reference": "https://github.com/gopasspw/gopass?tab=readme-ov-file#from-source"
    }
  }
}
