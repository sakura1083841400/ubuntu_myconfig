{
  "lang": "Python",
  "homepage": "https://www.pylint.org/",
  "desc": {
    "cn": "Pylint是Python 2 或 3 的静态代码分析器",
    "en": "Pylint is a static code analyser for Python 2 or 3"
  },
  "rule": {
    "debian/apt": {
      "cmd": "sudo apt-get install pylint",
      "reference": "https://pylint.org/#install"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install pylint",
      "reference": "https://pylint.org/#install"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install pylint",
      "reference": "https://pylint.org/#install"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge pylint",
      "reference": "https://pylint.org/#install"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install python3-pylint",
      "reference": "https://pylint.org/#install"
    },
    "freebsd/portmaster": {
      "cmd": "portmaster devel/pylint",
      "reference": "https://pylint.org/#install"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S python-pylint",
      "reference": "https://pylint.org/#install"
    },
    "/pip": {
      "cmd": "pip install pylint",
      "reference": "https://pylint.org/#install"
    }
  }
}
