# shellcheck disable=SC2154
___x_cmd_fjo_org_apply__membership_admin_info(){
    [ -n "$membership_admin" ] || { printf "\n"; return 0; }

    NO_CACHE=1 x gh org membership ls --json --org "$org" --role admin | x ja t "\t" ; printf "\n"
    # ___x_cmd_cmds_cat "$(x wsroot)"/.x-cmd/org-member-admin.json | x ja t "\t" ; printf "\n"
}
# https://codeberg.org/api/swagger#/organization/orgListMembers
# TODO:
___x_cmd_fjo_org_apply__membership_member_info(){
    [ -n "$membership_member" ] || { printf "\n"; return 0; }

    NO_CACHE=1 x gh org membership ls --json --org "$org" --role member | x ja t "\t" ; printf "\n"
    # ___x_cmd_cmds_cat "$(x wsroot)"/.x-cmd/org-member-member.json | x ja t "\t" ; printf "\n"
}

# TODO:
___x_cmd_fjo_org_apply__org_info(){
    NO_CACHE=1  x gh org info --json "$org" | x ja t "\t" ; printf "\n"
    # ___x_cmd_cmds_cat "$(x wsroot)"/.x-cmd/org-info.json | x ja t "\t" ; printf "\n"
}

___x_cmd_fjo_org_apply__replace_args(){
    if [ $# -gt 0 ]; then
        local IFS=","; printf "replace:%s\n" "$*"
        return
    fi
    # ___x_cmd_cmds_cat "$(x wsroot)"/.x-cmd/lteam-member.yml | x y2j | x ja t "\t" ; printf "\n"
}
# TODO:
___x_cmd_fjo_org_apply__help(){
    printf "\033[1m%s\033[0m\n\n\033[33m%s\033[0m\n    \033[36m%s\033[0m\n    \033[36m%s\033[0m\n" \
        "x gh org apply <filepath | '-' config from stdin> <...alias name list>" \
        "Example" \
        "x gh org apply org.yml bot=x-cmd-bot" \
        "cat ./org.yml | x gh org apply - bot=x-cmd-bot"
}

